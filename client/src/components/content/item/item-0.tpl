<li class="content-item content-item__0" data-url={{url}} data-page="{{pageNum}}" data-index="{{index}}" data-uniquekey="{{uniquekey}}">
  <h3 class="content-title">{{title}}</h3>
  <div class="content-info">
    <span class="content-info-author">{{author}}</span>
    <span class="content-info-date">{{date}}</span>
  </div>
</li>