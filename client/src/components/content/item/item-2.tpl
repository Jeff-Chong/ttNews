<li class="content-item content-item__2"  data-url={{url}} data-page="{{pageNum}}" data-index="{{index}}" data-uniquekey="{{uniquekey}}">
  <div class="content-main">
    <h3 class="content-title">{{title}}</h3>
    <div class="content-pic">
      <div class="content-pic-item">
        <img class="content-img lazy-img" data-src="{{thumbnail_pic_s}}" src="{{imgSrc}}" alt="{{title}}">
      </div>
      <div class="content-pic-item content-pic-item__last">
        <img class="content-img lazy-img" data-src="{{thumbnail_pic_s02}}" src="{{imgSrc}}" alt="{{title}}">
      </div>
    </div>
  </div>
  <div class="content-info">
    <span class="content-info__author">{{author}}</span>
    <span class="content-info__date">{{date}}</span>
  </div>
</li>